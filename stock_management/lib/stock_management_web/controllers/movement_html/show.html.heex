<Layouts.app flash={@flash}>
  <.header>
    Movement {@movement.id}
    <:subtitle>This is a movement record from your database.</:subtitle>
    <:actions>
      <.button navigate={~p"/movements"}>
        <.icon name="hero-arrow-left" />
      </.button>
    </:actions>
  </.header>

  <.list>
    <:item title="Date">{Calendar.strftime(@movement.inserted_at, "%d/%m/%Y | %H:%M")}</:item>
    <:item title="Type">{@movement.type}</:item>
    <:item title="Quantity">{@movement.quantity}</:item>
    <:item title="Observation">{@movement.notes}</:item>
  </.list>
</Layouts.app>
